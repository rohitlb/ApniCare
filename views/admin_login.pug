doctype html
head
    title Admin Login
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css")
body(style="background-color: #F8F8F8;color : #000;margin-left: 350px;text-align:center;")
    div.center-align#page(style="width:500px;text-align: center; background-color: #F8F8F8")
        br
        br
        br
        br
        br
        br

        div.collection.center(style='background-color:white; text-align:center;')
            form(method="post", name="Login", action="#")
                 table.center(width="100%", cellspacing="10")
                        h4.center-align Admin Login
                        tr.login_table_left
                        td.label(width="100" align="right") Username
                        td
                            input.browser-default(name="auth_username" id="auth_username"  type="text" maxlength="32"  border="0"  autofocus="autofocus"  size="24"  class="input"  tabindex="1")
                        tr.login_table_left
                        td(width="100" align="right" class="label") Password
                        td
                            input.browser-default(name="auth_password" id="auth_password" type="password" maxlength="128"  border="0"  class="input"  tabindex="2"  size="24")
                 input(class="button" type="submit" value="Log in" style="margin-top: 10px")
                 br
                 br
        div.hint
            a(href="#") Forgot username |&nbsp
            a(href="#") Reset password |&nbsp
            a(href="http://www.apnicare.com") www.apnicare.com
