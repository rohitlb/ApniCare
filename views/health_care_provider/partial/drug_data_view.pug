                each val in data
                    h3 #{val.brand_name.toUpperCase()}
                        span <em>&nbsp - &nbsp</em>
                        each company in val.company_id
                            span <em>manufactured by #{company.company_name.toUpperCase()}</em>
                        h5 [#{val.categories}]
                        if(val.type)
                            h5.right #{val.type}
                        br
                        br
                        li Consumed in the form of:
                            each dosage in val.dosage_id
                                    br
                                    span
                                        | <strong>#{val.brand_name} #{dosage.dosage_form.toUpperCase()}</strong> &nbsp &nbsp
                                        each dose in dosage.strength_id
                                            span <strong>#{dose.strength}</strong> &nbsp &nbsp
                                            span <strong>#{dose.packaging}</strong> &nbsp &nbsp
                                            span <strong>#{dose.price}</strong>
                                            span #{dose.prescription}
                                            br
                                            br
                                            li Involves Potent Substances:
                                                each pot in dose.potent_substance
                                                    br
                                                    span <strong>#{pot.name}</strong>
                                                    span <strong>#{pot.molecule_strength}</strong>
                                            br
                                            br
                                            if dose.prescription != ''
                                                li For Consumption of <strong>#{val.brand_name.toUpperCase()}</strong>,
                                                span a Prescription is <strong>#{dose.prescription}</strong>
                                            br
                                            br
                                            if(dose.dose_taken != '')
                                                li Dose Taken As:
                                                    br
                                                    span <strong>#{dose.dose_taken}</strong>
                                            br
                                            br
                                            if(dose.dose_timing != '')
                                                li Dose Timings:
                                                    br
                                                    span <strong>#{dose.dose_timing}</strong>
                                            br
                                            br
                                            if(dose.primarily_used_for != '')
                                                li The Drug <strong>#{val.brand_name.toUpperCase()}</strong> is primarily used for <strong>#{dose.primarily_used_for}</strong>
                                            br
                                            br
                                            if(dose.warning != '')
                                                i.material-icons.left warning
                                                span.red-text Warnings
                                                br
                                                span <strong>#{dose.warning}</strong>

