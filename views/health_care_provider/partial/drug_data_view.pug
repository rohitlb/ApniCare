        div.col.s12.m12.l12
            div.col.grey.lighten-3.s12.m8.l9
                each val in data
                    h3.section.scrollspy#data_name #{val.brand_name.toUpperCase()}
                        span <em>&nbsp - &nbsp</em>
                        each company in val.company_id
                            span <strong>manufactured by #{company.company_name.toUpperCase()}</strong>
                        if(val.categories != '')
                            h5  [#{val.categories}]

                    li.section.scrollspy#prescription Prescription:
                    each dosages in val.dosage_id
                            each doses in dosages.strength_id
                                if (doses.prescription != '')
                                    span &nbsp<strong>#{doses.prescription}</strong>
                li.section.scrollspy#potent Involves Potent Substances: &nbsp
                    each vas in data
                        each dosages in vas.dosage_id
                            each doses in dosages.strength_id
                                each pots in doses.potent_substance
                                    - var array1 = pots.name.split(",");
                                    - var array2 = pots.molecule_strength.split(',');
                                    -for(var l = 0;l< array1.length ; l++)
                                        br
                                        span.next_line= array1[l]+ " : " +array2[l]




                each vas in data
                            each dosage in vas.dosage_id
                                each dose in dosage.strength_id

                                        table.responsive-table.responsive-on-down-only
                                            thead
                                                tr
                                                    th.section.scrollspy#dosage_form Dosage Form
                                                    if(dose.strength != '')
                                                        th Strength
                                                    if(dose.packaging != '')
                                                        th Packaging
                                                    th Price
                                            tbody
                                                tr
                                                    td <strong>#{dosage.dosage_form.toUpperCase()}</strong> &nbsp &nbsp
                                                    if(dose.strength != '')
                                                        td <strong>#{dose.strength} #{dose.strengths}</strong> &nbsp &nbsp
                                                    if(dose.packaging != '')
                                                        td <strong>#{dose.packaging}</strong> &nbsp &nbsp
                                                    td <strong>#{dose.price}</strong>
                                                br
                                        each pots in dose.potent_substance
                                                    if(dose.dose_taken != '')
                                                        li.section.scrollspy#dose_taken Dose Taken As:&nbsp
                                                            span <strong>#{dose.dose_taken}</strong>
                                                    br

                                                    if(dose.dose_timing != '')
                                                        li.section.scrollspy#timing Dose Timings:&nbsp
                                                            span <strong>#{dose.dose_timing}</strong>
                                                    br
                                                    if(vas.primarily_used_for != '')
                                                        li.next_line.section.scrollspy#primarily The Drug <strong>#{vas.brand_name.toUpperCase()}</strong> is primarily used for
                                                        span.next_line <strong>#{vas.primarily_used_for}</strong>
                                                    br
                                                    if(dose.warnings != '')
                                                        i.material-icons.left warning
                                                        span.section.scrollspy#warnings.red-text Warnings
                                                        br
                                                        span <strong>#{dose.warnings}</strong>
                                                        br
                                                        br
                                                        br

            div.col.m4.l3.hide-on-small-only

                ul.section.table-of-contents(style='position:fixed;z-index:2;padding-bottom:10px;')
                    li
                        a(href='#data_name') Brand
                        each vas in data
                            if(vas.types!= '')
                                span -#{vas.types}
                    li
                        a(href='#prescription') Prescription
                    li
                        a(href='#potent') Potent Substances
                    li &nbsp&nbsp&nbsp&nbsp&nbspDosage Form
                        each vas in data
                            each dosage in vas.dosage_id
                                each dose in dosage.strength_id
                                    ul
                                        li
                                            a(href='#dosage_form') &nbsp&nbsp&nbsp&nbsp#{dosage.dosage_form}
                                        li
                                            a(href='#dose_taken') &nbsp&nbsp&nbsp&nbspDose Taken for #{dosage.dosage_form}
                                        li
                                            a(href='#timing') &nbsp&nbsp&nbsp&nbspDose Timing for #{dosage.dosage_form}
                                        li
                                            a(href='#primarily') &nbsp&nbsp&nbsp&nbspPrimarily Used For for #{dosage.dosage_form}
                                        li
                                            a(href='#warnings') &nbsp&nbsp&nbsp&nbspWarnings for #{dosage.dosage_form}

            div
                br
                br
                div.col.s12.l12.m12.grey.lighten-1(style='padding:5px;margin-top:20px')
                    a.black-text.modal-trigger(href='#modal2') <strong>Give a Feedback on the above data</strong>
                        i.material-icons.left.black-text feedback
            div.modal#modal2
                div.modal-content
                    h4.center.teal-text.darken-2 Your Feedback is valuable...
                    form.col.l10.m10.s10#form_feedback(method='POST')
                        div
                            span How useful is the data that we provide?
                            br
                            br
                            input.with-gap#radio1(name='radio1_feedback' type='radio' value='Very Useful' checked)
                            label(for='radio1') Very Useful&nbsp
                            input.with-gap#radio2(name='radio1_feedback' type='radio' value='Useful')
                            label(for='radio2') Useful&nbsp
                            input.with-gap#radio3(name='radio1_feedback' type='radio' value='Average')
                            label(for='radio3') Average&nbsp
                            input.with-gap#radio4(name='radio1_feedback' type='radio' value='Not Useful')
                            label(for='radio4') Not Useful&nbsp
                            input.with-gap#radio5(name='radio1_feedback' type='radio' value='Not Useful At All')
                            label(for='radio5') Not Useful At All

                        br
                        div.input-field
                            span Suggest changes in data
                            textarea#suggestion(style='height:90px;' required)
                            label(for='suggestion')
                        br

                        div.row
                            div.col.s6.l4.m4.offset-l1
                                input.reset(type='reset')
                            div.col.s6.l4.m4.offset-l3
                                input.button#submit_feedback(type='submit')
